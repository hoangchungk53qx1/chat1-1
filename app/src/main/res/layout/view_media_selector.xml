<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/bg_white">

    <one.mixin.android.widget.media.RecentPhotoRecyclerView
        android:id="@+id/recent_photos"
        android:layout_width="0dp"
        android:layout_height="@dimen/photo_size"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/menu_camera"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_selector_camera"
        android:padding="12dp"
        android:src="@drawable/ic_selector_camera"
        app:layout_constraintEnd_toStartOf="@+id/menu_gallery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recent_photos"
        app:layout_constrainedWidth="true"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/menu_gallery"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_selector_gallery"
        android:padding="12dp"
        android:src="@drawable/ic_selector_gallery"
        app:layout_constraintEnd_toStartOf="@+id/menu_document"
        app:layout_constraintStart_toEndOf="@+id/menu_camera"
        app:layout_constraintTop_toBottomOf="@id/recent_photos"
        app:layout_constrainedWidth="true"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/menu_document"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_selector_video"
        android:padding="12dp"
        android:src="@drawable/ic_selector_document"
        app:layout_constraintEnd_toStartOf="@+id/menu_transfer"
        app:layout_constraintStart_toEndOf="@+id/menu_gallery"
        app:layout_constraintTop_toBottomOf="@id/recent_photos"
        app:layout_constrainedWidth="true"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/menu_transfer"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_selector_contact"
        android:padding="12dp"
        android:src="@drawable/ic_selector_transfer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/menu_document"
        app:layout_constraintTop_toBottomOf="@id/recent_photos"
        app:layout_constrainedWidth="true"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/menu_music"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_selector_music"
        android:padding="12dp"
        android:src="@drawable/ic_selector_music"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/menu_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu_camera"
        app:layout_constrainedWidth="true"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/menu_location"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_selector_location"
        android:padding="12dp"
        android:src="@drawable/ic_selector_location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/menu_music"
        app:layout_constraintStart_toEndOf="@+id/menu_video"
        app:layout_constraintTop_toBottomOf="@id/menu_camera"
        app:layout_constrainedWidth="true"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/menu_video"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_selector_document"
        android:padding="12dp"
        android:src="@drawable/ic_selector_video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/menu_down"
        app:layout_constraintStart_toEndOf="@+id/menu_location"
        app:layout_constraintTop_toBottomOf="@id/menu_camera"
        app:layout_constrainedWidth="true"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/menu_down"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_selector_down"
        android:padding="12dp"
        android:src="@drawable/ic_selector_down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/menu_video"
        app:layout_constraintTop_toBottomOf="@id/menu_camera"
        app:layout_constrainedWidth="true"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
